{
  "name": "@lindorm-io/identity-service",
  "description": "Identity Service",
  "version": "0.1.0",
  "license": "ISC",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:lindorm-io/identity-service.git"
  },
  "bugs": {
    "url": "https://github.com/lindorm-io/identity-service/issues"
  },
  "author": "Jonn Nilsson",
  "maintainers": [
    "jonn@jonn.nu"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf dist",
    "check:lint": "eslint --ext .ts ./src/",
    "check:lint:fix": "eslint --ext .ts ./src/ --fix",
    "check:types": "tsc -p tsconfig.json --noEmit",
    "check:types:watch": "tsc -p tsconfig.json --noEmit --watch",
    "start": "node dist/server",
    "start:dev": "nodemon",
    "test": "npm run test:unit && npm run test:integration",
    "test:clear": "jest --clearCache",
    "test:coverage": "rimraf coverage && jest --coverage --forceExit",
    "test:integration": "jest --config jest.config.integration.js --",
    "test:integration:watch": "jest --config jest.config.integration.js --watch --",
    "test:unit": "jest --config jest.config.js --",
    "test:unit:watch": "jest --config jest.config.js --watch --",
    "test:update": "jest --updateSnapshot",
    "test:watch": "npm run test:unit:watch",
    "update": "ncu -u && ncu -u",
    "validate": "npm run test:clear && npm run check:lint && npm run check:types && npm test"
  },
  "dependencies": {
    "@lindorm-io/axios": "^0.2.5",
    "@lindorm-io/core": "^0.2.8",
    "@lindorm-io/crypto": "^0.1.6",
    "@lindorm-io/entity": "^0.2.3",
    "@lindorm-io/errors": "^0.1.9",
    "@lindorm-io/jwt": "^0.5.0",
    "@lindorm-io/key-pair": "^0.3.4",
    "@lindorm-io/koa": "^0.6.0",
    "@lindorm-io/koa-axios": "^0.0.12",
    "@lindorm-io/koa-basic-auth": "^0.1.9",
    "@lindorm-io/koa-bearer-auth": "^0.2.2",
    "@lindorm-io/koa-config": "^0.0.4",
    "@lindorm-io/koa-jwt": "^0.4.2",
    "@lindorm-io/koa-keystore": "^0.4.6",
    "@lindorm-io/koa-mongo": "^0.4.7",
    "@lindorm-io/koa-redis": "^0.2.7",
    "@lindorm-io/mongo": "^0.5.5",
    "@lindorm-io/redis": "^0.3.6",
    "@lindorm-io/winston": "^0.1.8",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "joi": "^17.4.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.172",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^16.7.8",
    "@types/redis": "^2.8.31",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "compd": "^3.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "jest-extended": "^0.11.5",
    "lint-staged": "^11.1.2",
    "mockdate": "^3.0.5",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
